<h1>Ideas</h1>
{{#each ideas}}
<div class="card card-body mb-3">
  <h4>{{title}}</h4>
  <p>{{details}}</p>
  <a class="btn btn-dark mb-3" href="/ideas/edit/{{id}}">Edit</a>

  {{!-- To send a delete request, use the method-override --}}
  <form method="post" action="/ideas/{{id}}?_method=DELETE">
    {{!-- Hidden input needed by method-override --}}
    <input type="hidden" name="_method" value="DELETE">

    <button type="submit" class="btn btn-danger btn-block">Delete</button>

  </form>
</div>
{{else}}
<p>No video ideas listed</p>
{{/each}}